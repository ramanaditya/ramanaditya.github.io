---
---
[
  {% for post in site.posts %}
    {
    "title": "{{ post.title | strip_html | escape | capitalize }}",
    "subtitle": "{{ post.subtitle | strip_html | escape | capitalize }}",
    "author": "{{ post.author }}",
    "url": "{{ site.baseurl }}{{ post.url }}",
    "categories": "{{post.categories | join: ', '}}",
    "tags": "{{ post.tags | join: ', ' }}",
    "date": "{{ post.date }}",
    "excerpt":"{{ post.excerpt }}",
    "description": "{{post.description | strip_html | strip_newlines | escape }}"
  } {% unless forloop.last %},
  {% endunless %}
  {% endfor %}
]
